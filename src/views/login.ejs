<%- include('./includes/head') %>
<%- include('./includes/nav') %>
  <div class="container">
    <div class="row my-3">
      <div class="col-12">
        <h1 class="text-center">Login</h1>
        <p class="text-center lead">
          Faça seu login, ou crie seu cadastro
          <%- include('includes/messages') %>
        </p>
      </div>
      <div class="col-5">
        <h4>Faça seu cadastro</h4>
          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label class="form-label">E-mail</label>
              <input type="email" name="email" class="form-control" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Sua senha</label>
              <input type="password" name="password" min="3" max="50" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Criar cadastro</button>
          </form>
      </div>
      <div class="col-2 d-flex align-items-center justify-content-center">
        OU
      </div>
      <div class="col-5">
        <h4>Faça seu login</h4>
        <form action="/login/auth" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="mb-3">
            <label class="form-label">E-mail</label>
            <input type="email" name="email" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Sua senha</label>
            <input type="password" name="password" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-primary">Fzer Login</button>
        </form>
      </div>
    </div>
  </div>
<%- include('./includes/footer') %>
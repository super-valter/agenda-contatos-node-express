<%- include('./includes/head') %>
<%- include('./includes/nav') %>
  <div class="container">
    <div class="row my-3">
      <div class="col-12">
        <h1 class="text-center">Login</h1>
        <p class="text-center lead">
          Faça seu login, ou crie seu cadastro
          <%- include('includes/messages') %>
        </p>
      </div>
      <div class="col-12 col-md-5">
        <h4>Faça seu login</h4>
        <form action="/login/auth" method="post" class="needs-validation-login" novalidate>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-floating mb-3">
            <input type="email" name="email" class="form-control" required  placeholder="..">
            <label class="form-label">E-mail</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" name="password" class="form-control" required  placeholder="..">
            <label class="form-label">Sua senha</label>
          </div>
          <button type="submit" class="btn btn-primary">Fzer Login</button>
        </form>
      </div>
      <div class="col-12 col-md-2 my-5 d-flex align-items-center justify-content-center">
        OU
      </div>
      <div class="col-12 col-md-5">
        <h4>Faça seu cadastro</h4>
          <form action="/login/register" method="post" class="needs-validation-add-user" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" placeholder="..">
            <div class="form-floating mb-3">
              <input type="email" name="email" class="form-control" required  placeholder="..">
              <label class="form-label">E-mail</label>
            </div>
            <div class="form-floating mb-3">
              <input type="text" name="nome" class="form-control" required  placeholder="..">
              <label class="form-label">Nome</label>
            </div>
            <div class="form-floating mb-3">
              <input type="password" name="password" min="3" max="50" class="form-control" required  placeholder="..">
              <label class="form-label">Sua senha</label>
            </div>
            <button type="submit" class="btn btn-primary">Criar cadastro</button>
          </form>
      </div>
    </div>
  </div>
<%- include('./includes/footer') %>
<%- include('./includes/head') %>
<%- include('./includes/nav') %>
  <div class="container">
    <div class="row d-flex align-items-center justify-content-center">
      <div class="col-12 col-md-8 my-3">
        <h1 class="text-center">Agenda</h1>
        <p class="text-center lead">
          Seus Contatos estão abaixo
        </p>
        <%- include('includes/messages') %>
        <% if (user) { %>
        <% if (contacts.length > 0) { %>
          <div class="table-responsive">
            <table class="table my-3">
              <thead>
                <tr>
                  <th scope="col">Nome</th>
                  <th scope="col">Sobrenome</th>
                  <th scope="col">E-mail</th>
                  <th scope="col">Telefone</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <% contacts.forEach(contact => { %>              
                <tr>
                  <td><%= contact.nome %></td>
                  <td><%= contact.sobrenome %></td>
                  <td><%= contact.email %></td>
                  <td><%= contact.telefone %></td>
                  <td><a href="/contato/<%= contact._id %>" class="btn btn-primary">Altera</a></td>
                  <td><a href="/contato/delete/<%= contact._id %>" class="btn btn-danger">Excluir</a></td>
                </tr>
              <% }); %>
            </table>
          </div>
        <% } else { %>
          <p class="text-center lead">Não existe contato em sua agenda</p>
        <% } %>
        <% } else { %>
          <div class="text-center">
            <h5>Para vizualizar seus contatos, favor fazer o login</h5>
            <a href="/login" class="btn btn-primary">Fazer Login</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <%- include('./includes/footer') %>